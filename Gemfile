source 'https://rubygems.org'

gem 'rails', '4.0.2'
gem 'pg'
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'anjlab-bootstrap-rails', '~>3.0.0.0', require: 'bootstrap-rails'

group :development, :test do
  gem 'guard' #monitor files and when they're saved will perform an action for us
  gem 'guard-livereload' #when you save certain files it will auto-reload browser
  gem 'guard-rspec' #will run test when files are saved
  gem 'rspec-rails' #testing library for ruby
  gem 'capybara' #integration testing with rails
  gem 'factory_girl_rails' #allows us to create factories for when we need an instance of an active record object
  gem 'database_cleaner' #cleans up our database after the test runs
  gem 'shoulda-matchers'

end
